<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="CommunityToolkit.Maui.Sample.Pages.Converters.NullableBoolComponentWithLabel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="This"
    IsVisible="{Binding NullableIsVisible, Source={x:Reference This}}">

    <Label
        Text="Binding to a nullable bool (bool?) is also allowed. If the bool? is null, the converter will return false."
        TextColor="{StaticResource NormalLabelTextColor}"
        VerticalOptions="Center" />
</ContentView>